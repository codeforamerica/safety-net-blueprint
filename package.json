{
  "name": "safety-net-blueprint",
  "version": "1.0.0",
  "private": true,
  "description": "Systems integration blueprint for safety net benefits programs",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "packages/*",
    "!packages/resolved"
  ],
  "scripts": {
    "start": "node packages/mock-server/scripts/server.js --spec=packages/contracts",
    "validate": "node packages/contracts/scripts/validate-openapi.js --spec=packages/contracts && node packages/contracts/scripts/validate-patterns.js --spec=packages/contracts && node packages/contracts/scripts/validate-schemas.js --spec=packages/contracts",
    "validate:syntax": "node packages/contracts/scripts/validate-openapi.js --spec=packages/contracts",
    "validate:patterns": "node packages/contracts/scripts/validate-patterns.js --spec=packages/contracts",
    "validate:schemas": "node packages/contracts/scripts/validate-schemas.js --spec=packages/contracts",
    "api:new": "node packages/contracts/scripts/generate-api.js",
    "api:update": "node packages/contracts/scripts/update-api.js",
    "resolve": "node packages/contracts/scripts/resolve.js",
    "clients:typescript": "node packages/clients/scripts/generate-clients-typescript.js",
    "clients:json-schema": "node packages/clients/scripts/generate-clients-json-schema.js",
    "postman:generate": "node packages/clients/scripts/generate-postman.js",
    "mock:start": "node packages/mock-server/scripts/server.js",
    "mock:stop": "node packages/mock-server/scripts/server.js --stop",
    "mock:start:all": "node packages/mock-server/scripts/start-all.js --spec=packages/contracts",
    "mock:swagger": "node packages/mock-server/scripts/swagger/server.js --spec=packages/contracts",
    "mock:setup": "node packages/mock-server/scripts/setup.js --spec=packages/contracts",
    "mock:reset": "node packages/mock-server/scripts/reset.js --spec=packages/contracts",
    "test": "npm test --workspaces --if-present",
    "test:unit": "node packages/mock-server/tests/run-all-tests.js --unit",
    "test:integration": "node packages/mock-server/tests/run-all-tests.js --integration",
    "test:all": "node packages/mock-server/tests/run-all-tests.js --all",
    "preflight": "bash scripts/preflight.sh",
    "docs:slides": "marp docs/presentation/safety-net-openapi-overview.md -o docs/presentation/safety-net-openapi-overview.html",
    "design:reference": "node packages/contracts/scripts/export-design-reference.js --spec=packages/contracts --out=docs",
    "contract-tables:export": "node packages/contracts/scripts/export-contract-tables.js",
    "contract-tables:import": "node packages/contracts/scripts/import-contract-tables.js"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3"
  }
}
