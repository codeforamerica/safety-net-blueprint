{
  "name": "safety-net-blueprint",
  "version": "1.0.0",
  "private": true,
  "description": "Systems integration blueprint for safety net benefits programs",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm start -w @safety-net/mock-server",
    "validate": "npm run validate -w @safety-net/contracts",
    "validate:syntax": "npm run validate:syntax -w @safety-net/contracts",
    "validate:patterns": "npm run validate:patterns -w @safety-net/contracts",
"api:new": "npm run api:new -w @safety-net/contracts",
    "overlay:resolve": "npm run overlay:resolve -w @safety-net/contracts",
    "clients:generate": "node packages/clients/scripts/generate-clients.js",
    "postman:generate": "npm run postman -w @safety-net/clients",
    "mock:start": "npm start -w @safety-net/mock-server",
    "mock:start:all": "npm run start:all -w @safety-net/mock-server",
    "mock:swagger": "npm run swagger -w @safety-net/mock-server",
    "mock:setup": "npm run setup -w @safety-net/mock-server",
    "mock:reset": "npm run reset -w @safety-net/mock-server",
    "test": "npm test --workspaces --if-present",
    "test:unit": "npm run test:unit -w @safety-net/mock-server",
    "test:integration": "npm run test:integration -w @safety-net/mock-server",
    "test:all": "npm run test:all -w @safety-net/mock-server",
    "docs:slides": "marp docs/presentation/safety-net-openapi-overview.md -o docs/presentation/safety-net-openapi-overview.html",
    "design:export": "npm run design:export -w @safety-net/contracts",
    "design:reference": "npm run design:reference -w @safety-net/contracts",
    "design:figma-data": "npm run design:figma-data -w @safety-net/contracts"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3"
  }
}
