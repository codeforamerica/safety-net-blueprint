{
  "name": "safety-net-blueprint",
  "version": "1.0.0",
  "private": true,
  "description": "Systems integration blueprint for safety net benefits programs",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm start -w @codeforamerica/safety-net-blueprint-mock-server",
    "validate": "npm run validate -w @codeforamerica/safety-net-blueprint-contracts",
    "validate:syntax": "npm run validate:syntax -w @codeforamerica/safety-net-blueprint-contracts",
    "validate:patterns": "npm run validate:patterns -w @codeforamerica/safety-net-blueprint-contracts",
    "validate:schemas": "npm run validate:schemas -w @codeforamerica/safety-net-blueprint-contracts",
    "api:new": "node packages/contracts/scripts/generate-api.js",
    "resolve": "node packages/contracts/scripts/resolve.js",
    "clients:typescript": "node packages/clients/scripts/generate-clients-typescript.js",
    "clients:json-schema": "node packages/clients/scripts/generate-clients-json-schema.js",
    "postman:generate": "npm run postman -w @codeforamerica/safety-net-blueprint-clients",
    "mock:start": "node packages/mock-server/scripts/server.js",
    "mock:stop": "node packages/mock-server/scripts/server.js --stop",
    "mock:start:all": "npm run start:all -w @codeforamerica/safety-net-blueprint-mock-server",
    "mock:swagger": "npm run swagger -w @codeforamerica/safety-net-blueprint-mock-server",
    "mock:setup": "npm run setup -w @codeforamerica/safety-net-blueprint-mock-server",
    "mock:reset": "npm run reset -w @codeforamerica/safety-net-blueprint-mock-server",
    "test": "npm test --workspaces --if-present",
    "test:unit": "npm run test:unit -w @codeforamerica/safety-net-blueprint-mock-server",
    "test:integration": "npm run test:integration -w @codeforamerica/safety-net-blueprint-mock-server",
    "test:all": "npm run test:all -w @codeforamerica/safety-net-blueprint-mock-server",
    "preflight": "bash scripts/preflight.sh",
    "docs:slides": "marp docs/presentation/safety-net-openapi-overview.md -o docs/presentation/safety-net-openapi-overview.html",
    "design:reference": "npm run design:reference -w @codeforamerica/safety-net-blueprint-contracts",
    "contract-tables:export": "npm run contract-tables:export -w @codeforamerica/safety-net-blueprint-contracts",
    "contract-tables:import": "npm run contract-tables:import -w @codeforamerica/safety-net-blueprint-contracts"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3"
  }
}
