{
  "name": "@safety-net/mock-server",
  "version": "1.0.0",
  "description": "Mock API server for Safety Net API development and testing",
  "type": "module",
  "bin": {
    "safety-net-mock": "./scripts/server.js",
    "safety-net-swagger": "./scripts/swagger/server.js"
  },
  "scripts": {
    "start": "node scripts/server.js --specs=../contracts",
    "start:all": "node scripts/start-all.js --specs=../contracts",
    "swagger": "node scripts/swagger/server.js --specs=../contracts",
    "setup": "node scripts/setup.js --specs=../contracts",
    "reset": "node scripts/reset.js --specs=../contracts",
    "test": "node tests/run-all-tests.js --unit",
    "test:unit": "node tests/run-all-tests.js --unit",
    "test:integration": "node tests/run-all-tests.js --integration",
    "test:all": "node tests/run-all-tests.js --all"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.7.2",
    "@safety-net/contracts": "*",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "newman": "^6.2.1"
  }
}
