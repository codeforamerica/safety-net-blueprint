{
  "name": "@safety-net/contracts",
  "version": "1.0.0",
  "description": "Behavioral contracts, OpenAPI specs, validation, and overlay resolution for Safety Net APIs",
  "type": "module",
  "files": [
    "src/",
    "*.yaml",
    "components/",
    "patterns/",
    "overlays/",
    "authored/",
    "scripts/"
  ],
  "bin": {
    "safety-net-resolve": "./scripts/resolve-overlay.js",
    "safety-net-design-reference": "./scripts/export-design-reference.js"
  },
  "exports": {
    "./overlay": "./src/overlay/overlay-resolver.js",
    "./validation": "./src/validation/openapi-validator.js",
    "./loader": "./src/validation/openapi-loader.js",
    "./patterns": "./src/validation/pattern-validator.js"
  },
  "scripts": {
    "prepack": "npm run design:reference",
    "test": "node --test tests/unit/*.test.js",
    "validate": "npm run validate:syntax && npm run validate:patterns",
    "validate:syntax": "node scripts/validate-openapi.js --specs=.",
    "validate:lint": "npx spectral lint '*-openapi.yaml' --ignore-unknown-format",
    "validate:patterns": "node scripts/validate-patterns.js --specs=.",
    "overlay:resolve": "node scripts/resolve-overlay.js --base=. --out=./resolved",
    "api:new": "node scripts/generate-api.js",
    "design:reference": "node scripts/export-design-reference.js --specs=. --out=../../docs"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.7.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.15.0"
  }
}
