{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@harness/*": ["../harness-designer/*"],
      "@contracts/*": ["./contracts/*"],
      "@openapi/*": ["../contracts/*"]
    }
  },
  "include": ["src"]
}
